{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 4am"
  ],
  "regexManagers": [
  {
    "fileMatch": [
      "(^|/)values.ya?ml$"
    ],
    "matchStrings": [
      "tag: (?<currentValue>.*)"
    ],
    "datasourceTemplate": "github-tags",
    "versioningTemplate": "semver",
    "packageName": "osism/openstack-image-manager"
  }

  ]
}
