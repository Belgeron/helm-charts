{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 4am"
  ],
  "customManagers": [
  {
    "customType": "regex",
    "description": "Update VERSION of Helm values.yaml",
    "fileMatch": [
      "(^|/)values.ya?ml$"
    ],
    "matchStrings": [
      "tag: (?<currentValue>.*)"
    ],
    "datasourceTemplate": "github-tags",
    "versioningTemplate": "semver",
    "packageNameTemplate": "openstack-image-manager/"
  }

  ]
}
