{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helmv3": {
    "enabled": false
  },
  "helm-values": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "automerge": true
    }
  ],
  "customManagers": [
  {
    "customType": "regex",
    "description": "Update VERSION of Helm values.yaml",
    "fileMatch": [
      "(^|/){{depName}}/values.ya?ml$", "(^|/){{depName}}/Chart.ya?ml$"
    ],
    "matchStrings": [
      "tag: (?<currentValue>.*)", "appVersion: \"(?<currentValue>.*)\"", "version: (?<currentValue>.*)"
    ],
    "datasourceTemplate": "github-tags",
    "versioningTemplate": "semver",
    "packageNameTemplate": "osism/openstack-image-manager",
    "depNameTemplate": "openstack-image-manager" 
  }

  ]
}
