{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helmv3": {
    "enabled": false
  },
  "helm-values": {
    "enabled": false
  },
  "customManagers": [
  {
    "customType": "regex",
    "description": "Update VERSION of Helm values.yaml",
    "fileMatch": [
      "(^|/)values.ya?ml$", "(^|/)Chart.ya?ml$
    ],
    "matchStrings": [
      "tag: (?<currentValue>.*)", "version: (?<currentValue>.*)"
    ],
    "datasourceTemplate": "github-tags",
    "versioningTemplate": "semver",
    "packageNameTemplate": "osism/openstack-image-manager"
  }

  ]
}
